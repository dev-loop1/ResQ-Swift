    <form id="patientForm" action="/login/profile/booking" method="post">
    <div class="flx">
        
        <div class="Hospital-Selection" data-aos="fade-right">
            <h1>Select a Hospital</h1>
            <div style=" font-size: 3vh ;">
                <% arr.forEach(function(hospitaldata){ %>
                    Hospital Name: <%= hospitaldata.hospitalname %> &nbsp &nbsp &nbsp  Hospital Distance: <%= hospitaldata.hospitaldistance %> KM &nbsp  <input type="radio" name="selectedhos" value= <%= hospitaldata.hospitalname %> > <br><br><br>
                <% }) %>
            </div>
            
        </div>
        <div class="details" >
            <p class="heading" data-aos="flip-up" data-aos-duration="2000">Details</p>
            <div class="form-container">
                
                    <div class="entity">
                        <p class="p1" data-aos="flip-up" data-aos-duration="2000">Patient Name</p>
                        <!-- <input type="text" class="inp" id="patientName" required> -->
                        <input type="text" class="inp" id="patientName" required="" name="pname">
                    </div>
                    <div class="entity">
                        <p class="p1" data-aos="flip-up" data-aos-duration="2000">Patient Age</p>
                        <!-- <input type="text" class="inp" id="patientAge" required> -->
                        <input type="text" class="inp" id="patientAge" required="" name="page">
                    </div>
                    <div class="entity">
                        <p class="p3" data-aos="flip-up" data-aos-duration="2000">Patient Gender</p>
                        <div style="color: white; font-size: 3vh;">
                            Male: <input type="radio" name="pgender" required="" value="Male">
                            &nbsp &nbsp &nbsp
                            Female: <input type="radio" name="pgender" required="" value="Female">
                            &nbsp &nbsp
                            Other: <input type="radio" name="pgender" required="" value="Other">
                        </div>
                    </div>
                    <div class="entity">
                        <p class="p3" data-aos="flip-up" data-aos-duration="2000">Phone Number</p>
                        <input type="tel" class="inp" id="Phonenumber" required="" name="pnumber">
                    </div>
                    <div class="btn-container" data-aos="flip-up">
                        <button type="submit" onclick="send()" class="submit-btn">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        function send(){
            alert("Your booking request will be sent to the selected hospital. You will receive a conformation email from the hospital.");
        }
    </script>
    <script>
        AOS.init({
            duration: 1000
        });
    </script>
</body>
</html>