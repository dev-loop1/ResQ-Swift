            width: 100%;
            background-color: white;
            border-radius: 10px;
            /* margin: 5px; */
            color: #2D4A90;
            /* max-height: 50vh; */
        }

        .details {
            /* position: fixed; */
            color: #fff;
            /* height: 80vh; */
            flex: 3;
            border-radius: 0px;
            /* margin: 5px; */
            display: flex;
            flex-direction: column;
            /* justify-content: center; */
            align-items: center;
            text-align: center;
            background:  #2D4A90;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            padding: 20px;
            
        }

        .heading {
            font-size: 4vh;
            font-weight: bolder;
            margin: 0;
            margin-top: 55px;
            /* color: black; */
        }

        .p1 {
            font-size: 3vh;
            text-align: left;
            /* color: black; */
            margin-top: 2vh;
        }
        .p3 {
            font-size: 3vh;
            text-align: left;
            /* color: black; */
        }

        .inp {
            height: 5vh;
            border-radius: 10px;
            width: 90%;
            border: none;
            /* border: 1px solid rgba(0, 0, 0, 0.2); */
            padding: 10px;
            transition: transform 0.3s;
            margin-bottom: 1vh;
            box-sizing: border-box;
        }

        .inp:hover {
            transform: scale(1.02);
            border: solid #20CDC1;
            border-radius: 10px;
        }
        .inp:focus {
            border: solid #fff;
            outline: none;
        }
        .inp:active {
            
            border: solid #fff;


        }

        .entity {
            margin-bottom: 20px;
        }

        .entity select {
            width: 90%;
            font-size: 3vh;
        }

        .entity select option {
            width: 100%;
            font-size: 3vh;
        }

        .btn-container {
            text-align: center;
        }

        .submit-btn {
            background: #00A86B;
            color: #fff;
            border: 3px white;
            border-radius: 15px;
            padding: 12px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
            font-weight: bold;
        }

        .submit-btn:hover {
            background: #e74c3c;

            transform: scale(1.2);
            font-weight: normal;
        }

        .form-container {
            width: 80%;
        }

        @media (min-width: 768px) {
            .flx {
                flex-direction: row;
            }
            .Hospital-Selection {
                flex: 2;
            }
            .details {
                flex: 1;
                margin-left: 10px;
                margin-right: 0;
            }
